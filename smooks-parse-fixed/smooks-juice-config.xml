<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.1.xsd"
                      xmlns:fl="http://www.milyn.org/xsd/smooks/fixed-length-1.3.xsd"
                      xmlns:ftl="http://www.milyn.org/xsd/smooks/freemarker-1.1.xsd"
                      xmlns:jb="http://www.milyn.org/xsd/smooks/javabean-1.4.xsd">

    <jb:bean beanId="juice" class="models.Juice" createOnElement="juice">
        <jb:value  property="flavour"  data="flavour" />
    </jb:bean>
                 <ftl:freemarker applyOnElement="models.Juice">
        <ftl:template>   <!--
        Our juice flavour is: ${juice.flavour}
        -->
        </ftl:template>
    </ftl:freemarker>

</smooks-resource-list>